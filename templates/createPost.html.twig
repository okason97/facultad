{% extends 'base.html.twig' %}

{% block content %}
<div class="container">
	<div class="form-title">
		<h2>Post</h2>		
	</div>
  	<hr>
    <form id="login-form" action="?controller=Post&action=create" method="post">
        <div class="form-group">
            <h4>Titulo</h4>
            <input type="text" name="title" tabindex="1" class="form-input" required
                value="{%- if title is defined -%}
                        	{{- title -}}
                        {%- endif -%}">
        </div>
        <div class="form-group">
            <h4>Texto</h4>
                <textarea type="text" rows="6" name="text" tabindex="2" class="form-textarea" required >
                    {%- if text is defined -%}
                        	{{- text -}}
                    {%- endif -%}
                </textarea>
        </div>
        <div class="form-group">
            <input type="submit" name="post-submit" class="form-submit" tabindex="3" value="Aceptar">
        </div>
    </form>
</div>
{% endblock %}